{% set values_collection = page.find('/about').children.published %}
{% if values_collection|length > 3 %}
    <section class="section section-values">
        <h2 class="values__title">{{ 'valuesheader'|t }}</h2>
        <div class="values__grid">
            {% for value in values_collection %}
                {% include 'partials/value-item.html.twig' with {'number': loop.index} %}
            {% endfor %}
        </div>
    </section>
{% endif %}